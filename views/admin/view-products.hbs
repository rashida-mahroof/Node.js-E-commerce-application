<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto mb-4">Add product</a>
        </div>
        <table class="table mt-5" id="productsTable">
  <thead>
    <tr>
      
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Image</th>
      <th>options</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width: 50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
      <a href="/admin/edit-product/{{this._id}}" >Edit</a>
    <a href="/admin/delete-product/{{this._id}}" style="color: tomato;" onclick="return confirm('Do you want to delete {{this.Name}} ?')">Delete</a>
    </td>
    </tr>
  
    {{/each}}
  </tbody>
</table>
    </div>
</section>

<script>
$(document).ready( function () {
    $('#productsTable').DataTable();
} );
</script>